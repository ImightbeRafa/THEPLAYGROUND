<!-- File: views/error.ejs -->
<div class="error-container">
    <h1>Oops! Something went wrong</h1>
    <% if (error && error.status) { %>
        <h2><%= error.status %></h2>
    <% } %>
    <% if (error && error.message) { %>
        <p><%= error.message %></p>
    <% } %>
    <a href="/" class="cta-button">Return Home</a>
</div>